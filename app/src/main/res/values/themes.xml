<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RFIDCartApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Launcher theme used only while the system splash is on screen -->
    <style name="Theme.RFIDCartApp.Launcher" parent="Theme.SplashScreen">
        <!-- Splash background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Splash icon (use your existing drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_inset</item>

        <!-- Optional: background behind icon (usually transparent) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Theme to apply after the splash -->
        <item name="postSplashScreenTheme">@style/Theme.RFIDCartApp</item>
    </style>
</resources>